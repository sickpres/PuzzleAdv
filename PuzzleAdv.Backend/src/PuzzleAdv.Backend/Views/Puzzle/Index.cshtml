@model IEnumerable<PuzzleAdv.Backend.ViewModels.Puzzle.PuzzleListViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "I tuoi Puzzle";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="container">
        <div class="ibox">
            <div class="ibox-title">
                <h4>I tuoi Puzzle</h4>
                <div class="ibox-tools">
                    <a class="btn btn-primary" asp-action="Create">Nuovo Puzzle</a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">

                    @foreach (var item in Model)
                    {

                        <div class="col-md-3">
                            <div class="ibox">
                                <div class="ibox-content product-box">
                                    <div class="ibox-content no-padding border-left-right">
                                        <a href="~/Uploads/16-9/1065/@(item.PuzzleImage).jpg" class="fancybox" data-fancybox-group="images_gallery">
                                            <figure class="img-hover">
                                                <img class="img-responsive" src="~/Uploads/16-9/400/@(item.PuzzleImage).jpg" alt="image" />
                                                <div class="img-hover-masked"></div>
                                            </figure>
                                        </a>
                                        <!--img alt="image" class="img-responsive" src="~/Uploads/16-9/400/.jpg">-->
                                    </div>
                                    <div class="product-desc">
                                        <small class="text-muted">#@(item.IDNumber) | @Html.DisplayFor(modelItem => item.InsertDate)</small>
                                        <a href="#" class="product-name">
                                            <i class="fa @(item.StatusEnum.DisplayIcon())"></i>
                                            @(item.StatusEnum.DisplayName())
                                        </a>
                                        <div class="small m-t-xs">
                                            @Html.Raw(item.StatusInfo)
                                        </div>
                                        <div class="m-t text-left">
                                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-xs btn-outline btn-primary">
                                                Gestisci <i class="fa fa-long-arrow-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>

    </div>
</div>


@section Styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/fancybox/source/jquery.fancybox.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/fancybox/source/jquery.fancybox.css" />
    </environment>
}

@section Scripts {
    <environment names="Development">
        <script src="~/lib/fancybox/source/jquery.fancybox.pack.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/fancybox/source/jquery.fancybox.pack.js"></script>
    </environment>

    <script type="text/javascript">

        $(document).ready(function () {

            $('.fancybox').fancybox({
                loop: false
            });

        });

    </script>
}
