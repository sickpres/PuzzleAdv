@model IEnumerable<PuzzleAdv.Backend.ViewModels.Puzzle.PuzzleListViewModel>

@{
    Layout = "~/Views/Shared/_Layout_2.cshtml";
    ViewData["Title"] = "Elenco campagne";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="ibox">
        <div class="ibox-title">
            <h5>I tuoi Puzzle</h5>
            <div class="ibox-tools">
                <a class="btn btn-primary" asp-action="Create">Nuovo Puzzle</a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">

                @foreach (var item in Model)
                {

                    <div class="col-md-3">
                        <div class="ibox">
                            <div class="ibox-content product-box">
                                <div class="ibox-content no-padding border-left-right">
                                    <img alt="image" class="img-responsive" src="~/Uploads/@(item.PuzzleImage).png">
                                </div>
                                <div class="product-desc">
                                    <small class="text-muted">#@(item.IDNumber) | @Html.DisplayFor(modelItem => item.InsertDate)</small>
                                    <a href="#" class="product-name">
                                        <i class="fa @(item.StatusEnum.DisplayIcon())"></i>
                                        @(item.StatusEnum.DisplayName())
                                    </a>
                                    <div class="small m-t-xs">
                                        @Html.Raw(item.StatusInfo)
                                    </div>
                                    <div class="m-t text-left">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-xs btn-outline btn-primary">
                                            Gestisci <i class="fa fa-long-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>
