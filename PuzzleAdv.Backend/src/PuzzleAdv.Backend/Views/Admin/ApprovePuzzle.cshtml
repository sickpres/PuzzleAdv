@model PuzzleAdv.Backend.Models.Puzzle

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Approva";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="ibox">
        <div class="ibox-title">
            <h5>Verifica</h5>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                            <div class="ibox-content no-padding border-left-right">
                                <img alt="image" class="img-responsive" src="~/Uploads/16-9/1065/@(Model.PuzzleImage).jpg">
                            </div>
                            <div class="product-desc">
                                <div class="m-t text-center">
                                    <form asp-action="ApprovePuzzle" method="post">
                                        <button type="submit" name="approve" value="approve" class="btn btn-w-m btn-primary">Approva <i class="fa fa-check-circle-o"></i></button>
                                        <button type="submit" class="btn btn-w-m btn-danger">Rifiuta <i class="fa fa-exclamation-triangle"></i></button>
                                    </form>
                                    <br /><br />
                                    <a asp-action="ToApproveList">Indietro</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

